<% include ../partials/header %>

<div class="container">

	<!-- Jumbotron Header -->
	<header class="jumbotron my-4">
		<h1 class="display-3">Welcome To YelpCamp!</h1>
		<p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsa, ipsam, eligendi, in quo sunt possimus non incidunt odit vero aliquid similique quaerat nam nobis illo aspernatur vitae fugiat numquam repellat.</p>
		<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
	</header>

    <!-- Page Features -->
	<div class="row text-center">
		<% campgrounds.forEach(function(campground) { %>
			<div class="col-lg-3 col-md-6 mb-4">
				<div class="card">
					<img class="card-img-top" src="<%= campground.image %>" alt="">
					<div class="card-body">
						<h4 class="card-title"><%= campground.name %></h4>
						<p class="card-text"><%= campground.description %></p>
					</div>
					<div class="card-footer">
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Find Out More!</a>
					</div>
				</div>
			</div>
		<% }) %>

	</div>
    <!-- /.row -->
    
</div>
<!-- /.container -->

<% include ../partials/footer %>