<% include ../partials/header %>

<div class="container">
	<h1 class="text-center m-4">Edit <%= campground.name %></h1>
	<div class="row">
		<div class="col-md-6 mx-auto">
			<form class="form-group" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[price]" value="<%= campground.price %>" step="0.1" required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
				</div>
				<div class="form-group">
					<textarea class="form-control" rows="6" name="campground[description]" required><%- campground.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

</body>
</html>
