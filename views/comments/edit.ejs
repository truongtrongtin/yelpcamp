<% include ../partials/header %>

<div class="container">
	<h1 class="text-center m-4">Edit comment</h1>
	<div class="row">
		<div class="col-md-6 mx-auto">
			<form class="form-group" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" rows="6" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds/<%= campground_id %>">Go Back</a>
		</div>
	</div>
</div>

</body>
</html>